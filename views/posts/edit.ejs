<% include ../partials/header %>
    
    
    
    <div class="container"> 
         <div style=" margin:0 auto;width:30%">
             <h1> EDIT</h1>
        
        
            <form action="/posts/<%= post._id %>?_method=PUT " method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= post.name%>" name="updated[name]"></input>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= post.image%>" name="updated[image]"></input>
                </div>
                
                <div class="form-group">
                    <textarea class="form-control" type="text" id="descriptionText" name="updated[description]"><%= post.description%></textarea>
                </div>
                
                <div class="form-group">
                   <button class="btn btn-lg btn-primary btn-block"> SUBMIT</button> 
                </div>
            </form>
         </div>
    </div>
       
<% include ../partials/footer %>