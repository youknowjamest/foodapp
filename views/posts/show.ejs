<% include ../partials/header %>


<div class="container">
 <div class="row">
    <div class="col-md-3">
     <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
     </div>
    </div>
    
    <div class="col-md-9">
       <div class="thumbnail">
         <img id="postImage" src="<%= post.image%>">
         
         <div class="caption-full">
          <h2 class="postName"> <%= post.name %> </h2>
          <h4> <em>Posted by: <%= post.author.username %>, <%= moment(post.created).fromNow() %></em> </h4>
          <p> <%= post.description %> </p>
          <% if (currentUser && post.author.id.equals(currentUser._id)) { %>
           <a href="/posts/<%= post._id%>/edit" class="btn-warning btn btn-xs">
           EDIT POST
           </a>
           <form class="delete" action="/posts/<%= post._id%>?_method=DELETE" method="POST">
           <button class="btn btn-xs btn-danger ">DELETE POST</button>
           </form>
          <% } %>
         </div>
       </div>
       
      
       
      <div class="well"> 
        <div class="text-right">
         <a href="/posts/<%= post._id %>/comments/new" class="btn btn-primary ">Add New Comment</a>
        </div>
        <div class="comments">
          <% post.comments.forEach(function(comment){ %>
          <p>  
             <strong>
              
              Submitted by <%= comment.author.username%> 
              <span class="pull-right">
               <%= comment.created %> 
              </span>
         
             </strong> 
            
          </p>
        
          <p> <%= comment.text %> </p> 
          
          <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
            <a href="/posts/<%= post._id %>/comments/<%= comment._id %>/edit" class="btn btn-xs btn-warning"> Edit</a>
            <form class="delete" action="/posts/<%= post._id%>/comments/<%= comment._id %>?_method=DELETE" method="POST">
             <button class="btn btn-xs btn-danger ">DELETE </button>
            </form>
           <% } %>
           
        <% }) %>
       
        </div>
       
      </div>
       
       
    </div>
 </div>
  

</div>


<% include ../partials/footer %>